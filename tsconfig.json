{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES6",
        "jsx": "react",
        "baseUrl": "src",
        "outDir": "./build",
        "module": "esnext",
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"],
            "@dtos/*": ["dtos/*"],
            "@components/*": ["components/*"],
            "@layouts/*": ["layouts/*"],
            "@views/*": ["views/*"],
            "@services/*": ["services/*"],
            "@hooks/*": ["services/hooks/*"],
            "@api": ["services/api/index.ts"],
            "@store/*": ["store/*"],
            "@assets/*": ["assets/*"]
        }
    },
    "files": ["./globals.d.ts"],
    "include": ["src/**/*"]
}
